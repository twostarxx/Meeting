<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.meeting.VoteActivity">

    <TextView
        android:layout_width="fill_parent"
        android:text="投  票"
        android:background="#8CB8CA"
        style="@style/FragmentTitle"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="题目"
        android:gravity="left"
        android:id="@+id/vote_title"
        android:textSize="20sp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="New Text"
        android:textSize="15sp"
        android:gravity="left"
        android:layout_marginRight="40dp"
        android:background="@drawable/my_txt"
        android:id="@+id/vote_ans1"
        android:layout_above="@+id/vote_ans2"
        android:layout_alignStart="@+id/vote_title"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="New Text"
        android:textSize="15sp"
        android:gravity="left"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/my_txt"
        android:id="@+id/vote_ans2"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/vote_ans1" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="New Text"
        android:textSize="15sp"
        android:background="@drawable/my_txt"
        android:gravity="left"
        android:id="@+id/vote_ans3"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/vote_ans2"
        android:layout_alignStart="@+id/vote_ans2"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="New Text"
        android:textSize="15sp"
        android:layout_marginRight="40dp"
        android:background="@drawable/my_txt"
        android:gravity="left"
        android:id="@+id/vote_ans4"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/vote_ok"
        android:layout_alignStart="@+id/vote_ans3" />

    <TextView
        style="@style/FragmentTitle"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="确认提交"
        android:background="#536374"
        android:id="@+id/vote_ok"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />


</RelativeLayout>

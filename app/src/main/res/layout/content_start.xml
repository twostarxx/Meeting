<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.administrator.meeting.StartActivity"
    android:background="@color/border"
    tools:showIn="@layout/activity_start"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:scaleType="fitXY"
        android:id="@+id/img_start"
        android:src="@drawable/ic_meet4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/btn_start"
            android:background="@color/state"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_start"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/btn_vote"
            android:layout_marginStart="32dp"
            android:background="#8CB8CA"
            android:layout_alignTop="@+id/btn_start"
            android:layout_toEndOf="@+id/btn_start"
            android:src="@mipmap/ic_vote" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/btn_talk"
            android:layout_marginTop="35dp"
            android:background="#EEC486"
            android:layout_below="@+id/btn_start"
            android:layout_alignStart="@+id/btn_start"
            android:src="@mipmap/ic_talk" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/btn_record"
            android:background="@color/grey"
            android:layout_alignTop="@+id/btn_talk"
            android:layout_alignStart="@+id/btn_vote"
            android:src="@mipmap/ic_record" />

    </RelativeLayout>

</LinearLayout>

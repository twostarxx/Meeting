<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="130dp">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="15dp"
                android:id="@+id/img_meet_hot" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:gravity="left"
                    android:textSize="16sp"
                    android:id="@+id/text_hot_title"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/text_hot_money"
                    android:gravity="left"
                    android:textSize="14sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:gravity="left"
                    android:textSize="14sp"
                    android:id="@+id/text_hot_location"
                    android:layout_above="@+id/text_hot_money"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/text_hot_time"
                    android:gravity="left"
                    android:textSize="14sp"
                    android:layout_above="@+id/text_hot_location"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:src="#e5e5e5"
            android:layout_width="384dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:id="@+id/img_bottom"/>

    </LinearLayout>

</LinearLayout>
